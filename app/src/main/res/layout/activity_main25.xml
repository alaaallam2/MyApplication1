<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity23">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <VideoView
                android:id="@+id/video_view"
                android:layout_width="match_parent"
                android:layout_height="200dp" />



        </FrameLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="-46dp"
            android:layout_marginTop="250dp"
            android:layout_marginEnd="162dp"
            android:clickable="true"
            android:scaleType="centerCrop"
            android:src="@drawable/re3"
            app:civ_border_color="#ADFF2F"
            app:civ_border_width="1dp" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text"
            android:padding="10dp"
            android:text="Hello, my name is Sandara from America, today I will tell you my long story with addiction. I will tell it today because it is one of my most important achievements in life. It was a long, tiring journey with a mixture of determination and despair, as I have been recovering from heroin for about a year and a half. Let me tell you my story in this video. From the beginning of my story with addiction to recovery"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="240dp"
            android:layout_height="114dp"
            android:layout_alignBottom="@+id/text"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="243dp"
            android:layout_marginEnd="-72dp"
            android:layout_marginBottom="-10dp"
            android:text="Sandra"
            android:textSize="30sp" />

    </RelativeLayout>
</ScrollView>
